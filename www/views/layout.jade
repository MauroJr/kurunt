html
	head
		meta(charset="utf-8")
		title Kurunt
		link(rel='stylesheet', href='/stylesheets/login.css')
		
	body	

		// login
		div.wrap
				
			div#logo
				img(src='/images/kurunt_logo_big.png', alt='')
			
			- var input_username = '';
			- var input_password = '';
			- if ( lg.freshUser == true ) {
				- input_username = 'admin';
				- input_password = 'pass';
			
			div.tip
				p The default username is: 
					strong admin 
					| and password is: 
					strong pass 
					| - you'll be able to change this on login.
		
			- }
			
			div#login 
			
				form(method="post", name="login", id="login", action="")

					p
						label(for="username") Email / Username: 
						br
						input(type="input", name="username", value="#{input_username}", class="input")
					p	
						label(for="password") Password: 
						br
						input(type="password", name="password", value="#{input_password}", class="input")

					p
						input.submit4(type="submit", value="Login") 
					
					
				
- }